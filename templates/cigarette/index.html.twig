{% extends 'base.html.twig' %}

{% block title %}Cigarettes{% endblock %}

{% block body %}
    <div class="container mt-5">
    <h1 class="textStop textCigarette">Cigarettes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>FumÃ©e</th>
