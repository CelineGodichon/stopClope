            </tr>
        </thead>
        <tbody>
        {% for cigarette in cigarettes %}
            <tr>
                <td>{{ cigarette.id }}</td>
                <td>{{ cigarette.price }}</td>
                <td>{{ cigarette.isSmoked ? '<i class="fas fa-circle text-danger"></i>' : '<i class="fas fa-circle text-success"></i>' }}</td>
