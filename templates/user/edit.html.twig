{% extends 'base.html.twig' %}

{% block title %}Editer  {{ user.firstname ~ ' ' ~ user.lastname }}{% endblock %}

{% block body %}
    {% if app.user.id == user.id or is_granted('ROLE_ADMIN') %}
        <div class="container mt-5">
            <h1 class="textStop textCigarette">Editer {{ user.firstname ~ ' ' ~ user.lastname }}</h1>

            {{ include('user/_form.html.twig', {'button_label': 'Enregistrer'}) }}

            {% if is_granted('ROLE_ADMIN') %}

                {{ include('user/_delete_form.html.twig') }}
                <a class="btn btn-stop mt-1" href="{{ path('user_index') }}">Retour à la liste</a>

            {% endif %}
        </div>
    {% else %}
        <div class="container text-center">
           <h2 class="textCigarette mt-5"> Je sais que tu es en manque de nicotine et que cela te fait faire n'importe quoi, mais accroche-toi !</h2>
            <br>
            <a class="btn btn-stop mt-5" href="{{ path('homepage', {id : app.user.id}) }}">Retour à la page d'accueil</a>
        </div>
    {% endif %}
{% endblock %}
