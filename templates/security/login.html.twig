{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container col-sm-5 mt-5 mb-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-bolder">Connexion</h1>

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
{#            <p>#}
{#                <a href="{{ path('passwordchange') }}">Mot de passe oublié ?</a>#}
{#            </p>#}
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg mt-3 main-button" type="submit">
                    Connexion
                </button>
        </form>
