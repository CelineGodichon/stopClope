{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="loginPage container text-center col-sm-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-bolder">Connexion</h1>

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label class="mt-2" for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
{#            <p>#}
{#                <a href="{{ path('passwordchange') }}">Mot de passe oublié ?</a>#}
{#            </p>#}
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-stop mt-2" type="submit">
                    Connexion
                </button>
        </form>
        <p class="mt-5">Pas encore de compte?</p>
        <a href="{{ path('app_register') }}">
            <button class="btn btn-stop main-button">
                Inscription
            </button>
        </a>
    </div>
{% endblock %}
